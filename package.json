    "p-retry": "^2.0.0",
    "qs": "^6.5.2"
  },
  "devDependencies": {
    "@types/chai": "4.1.4",
    "@types/lodash": "4.14.116",
    "@types/mocha": "5.2.5",
    "@types/node": "10.9.4",
    "@types/node-fetch": "2.1.2",
    "@types/qs": "^6.5.1",
    "chai": "4.2.0",
    "mocha": "5.2.0",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typescript": "3.1.1"
  },
  "files": [
    "src",
    "dist/src"
